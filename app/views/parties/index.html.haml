#index
  %h1 Contacts

  #search
    - form_tag parties_path, :method => 'get' do
      %p
        = text_field_tag :search, params[:search]
        = submit_tag "Search", :name => nil
  
  %table
    %tr
      %th First name
      %th Last name
      %th Address
      %th city
      %th state
      %th zip
      %th Phone
      %th Email

    - @parties.each do |party|
      %tr
        %td
          =h link_to "#{party.first_name}", party
        %td  
          =h link_to "#{party.last_name}", party
        %td 
          =h party.address
        %td 
          =h party.city
        %td
          =h party.state
        %td
          = party.zip
        %td 
          =h party.phone
        %td 
          =h party.email
        %td
          %ul
            %li
              = link_to 'Edit', edit_party_path(party)
            %li
              = link_to 'Delete', party, :confirm => 'Are you sure?', :method => :delete
  %br/
  %br/
  = link_to 'New Contact', new_party_path